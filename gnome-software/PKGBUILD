# $Id: PKGBUILD 146037 2015-11-05 13:37:22Z heftig $
# Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>
# Contributor: Jan de Groot <jgc@archlinux.org>
# Contributor: Yosef Or Boczko <yoseforb@gnome.org>

pkgname=gnome-software
pkgver=3.21.4
pkgrel=1
pkgdesc="GNOME Software Tools"
arch=(i686 x86_64)
license=('GPL2')
url="https://wiki.gnome.org/Apps/Software/"
depends=(gtk3 appstream-glib libsoup gsettings-desktop-schemas gnome-desktop packagekit
         desktop-file-utils archlinux-appstream-data flatpak)
makedepends=(intltool)
install=gnome-software.install
source=(http://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('36c1893dea213fe7ac1d008321219e79a3b1cd14ad1af70f02ad952207d8f2a9')

prepare () {
  cd $pkgname-$pkgver

}

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --disable-static --disable-schemas-compile
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="${pkgdir}" install
}
