pkgname=gnome-autoar
pkgver=0.2.1
pkgrel=1
pkgdesc="Automatic archives creating and extracting library"
arch=('i686' 'x86_64')
license=(GPL)
depends=('glib2' 'gtk3' 'libarchive' 'gnome-common')
url="http://www.gnome.org"
source=(https://git.gnome.org/browse/gnome-autoar/snapshot/$pkgname-$pkgver.tar.xz)
sha256sums=('f6810bc9c30b496b1264dbc603e3227f34763ff4458476161922bb28cdf551ae')

prepare() {
  cd $pkgname-$pkgver
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}

# vim: ft=sh:ts=2:sw=2:et
