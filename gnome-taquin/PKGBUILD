# $Id: PKGBUILD 264971 2016-04-14 21:08:51Z heftig $
# Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>
# Contributor: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-taquin
pkgver=3.21.92
pkgrel=1
pkgdesc="Move tiles so that they reach their places"
url="https://wiki.gnome.org/Apps/Taquin"
arch=(x86_64 i686)
license=(GPL3)
depends=(gtk3 librsvg libcanberra)
makedepends=(intltool vala itstool)
groups=(gnome-extra)
install=gnome-taquin.install
options=(!emptydirs)
source=(https://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('0d5168c5c745fba6e7371a2eb9df6e7ede541afc39e3ff33cf6a6ffd05396ffe')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
