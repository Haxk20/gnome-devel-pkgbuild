# $Id: PKGBUILD 255155 2015-12-10 04:45:59Z foutrelis $
# Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>

pkgname=gnome-builder
pkgver=3.19.90
pkgrel=1
pkgdesc="An IDE for writing GNOME-based software"
url="https://wiki.gnome.org/Apps/Builder"
arch=(i686 x86_64)
license=(GPL3)
depends=(gtksourceview3 devhelp libgit2-glib gjs python-gobject clang desktop-file-utils
         ctags libpeas vte3 vala python-jedi xdg-app)
makedepends=(intltool llvm gobject-introspection gtk-doc)
groups=(gnome-extra)
install=gnome-builder.install
source=(http://download.gnome.org/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
md5sums=('4e5826472d1b4a040505f01a42c97fd9')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --libexecdir=/usr/lib
  make
}

#check() {
#  cd $pkgname-$pkgver
#  make -k check || :
#}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
